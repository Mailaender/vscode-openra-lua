{
	"name": "vscode-openra-lua",
	"displayName": "OpenRA Lua Language Extension",
	"description": "Adds game scripting API and map globals.",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"tags": [
		"rts",
		"strategy",
		"game",
		"mission",
		"scripting"
	],
	"version": "2.0.2",
	"publisher": "openra",
	"private": false,
	"license": "GPL-3.0",
	"icon": "img/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/OpenRA/vscode-openra-lua"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^14.14.0",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	},
	"extensionDependencies": [
		"sumneko.lua"
	]
}
